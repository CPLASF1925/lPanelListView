<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:gravity="right|center_vertical">


    <TextView
        android:id="@+id/tv_title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="名称代码"
        android:textColor="#8997A5"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/iv_short_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/tv_title_name"
        android:layout_toRightOf="@+id/tv_title_name"
        android:src="@mipmap/rise_img"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_draw_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_title_name"
        android:layout_toEndOf="@+id/tv_title_name"
        android:layout_toRightOf="@+id/tv_title_name"
        android:src="@mipmap/stocksign"
        android:visibility="visible"/>
</RelativeLayout>